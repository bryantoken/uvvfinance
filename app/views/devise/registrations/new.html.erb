<div class="bg-zinc-950 text-white flex-1 justify-center flex items-center">
  <div class="">
    <div class="ring-2 ring-indigo-600 rounded-lg drop-shadow-indigo-600 bg-zinc-950 p-10 px-10 min-w-96">
    <h2 class="text-4xl font-light">Inscrição</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Campo de e-mail -->
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-200" %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-zinc-900 text-gray-200" %>
    </div>
  </div>

  <!-- Campo de senha -->
  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-200" %>
    <% if @minimum_password_length %>
    <em class="text-gray-400 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-zinc-900 text-gray-200" %>
    </div>
  </div>

  <!-- Campo de confirmação de senha -->
  <div class="field">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-200" %>
    <div class="mt-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-zinc-900 text-gray-200" %>
    </div>
  </div>

  <!-- Botão de cadastro -->
  <div class="actions">
    <%= f.submit "Sign up", class: "w-full flex justify-center py-2 hover:cursor-pointer cursor-pointer focus:cursos-pointer px-4 border border-indigo-600 rounded-lg hover:bg-indigo-600 focus:bg-indigo-600 text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>    
  </div>
  </div>
</div>
